@{
}
@model TaiKhoan
<form asp-action="DangNhap" method="post" asp-controller="TaiKhoan">
    <div>
        <label>Ten Dang Nhap</label>
        <input asp-for="TenDangNhap" />
    </div>
    <div>
        <label>Mat Khau</label>
        <input asp-for="MatKhau" type= "password"/>
    </div>
    <button type="submit">Đăng Nhập</button>
    <div style="color:red">@ViewBag.Loi</div>
</form>
@if (ViewBag.ThongBao != null)
{
    <div class="text-danger">@ViewBag.ThongBao</div>
}

